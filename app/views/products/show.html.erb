



<div id="carouselExampleIndicators" class="carousel slide w-70" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
  <% @product.avatars.drop(1).each_with_index do |avatar, i|%>
    <li data-target="#carouselExampleIndicators" data-slide-to="<%=i%>" ></li>
    <%end%>

  </ol>

  <div class="carousel-inner">
      <div class="carousel-item active">
      <img class="d-block w-100" src="<%=@product.avatars[0].url%>" alt="First slide">
    </div>
  <% @product.avatars.drop(1).each_with_index do |avatar, i|%>

    <div class="carousel-item">
      <img class="d-block w-100" src="<%=@product.avatars[i].url%>">
    </div>
<%end%>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>

</div>


<div class="product-details container">

<p id="notice"><%= notice %></p>

 <h3><%= @product.title %></h3>

<p>
  <strong>description:</strong>
  <%= @product.description %>
</p>

<h3>Price: <span style="color:#ffa45c;">$</span><%=@product.price%></h3>

<%if @product.stock_quantity > 0%>
<h4>Available: <span style="color:#ffa45c;"><%=@product.stock_quantity%></span></h4>

<%else%>
<h4 style="color:#ffa45c;"> <span >Out of stock</h4>
<%end%>
<p>Brand: <span style="color:#ffa45c;"><%= link_to @product.brand.name,@product.brand%></span></br>
Store: <span style="color:#ffa45c;"><%=@product.store.name%></span>
<p>

</div>

<% if can? :manage, @product %>
<%= link_to 'Edit', edit_product_path(@product) %>
<% end %>

<%= link_to 'Back', products_path %>




