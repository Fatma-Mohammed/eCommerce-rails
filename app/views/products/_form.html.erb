<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>





  <%= form.file_field :avatars, multiple: true %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, :step => 0.01 %>
  </div>
  <div class="field">
    <%= form.label :Quantity %>
    <%= form.number_field :stock_quantity %>
  </div>

  <h4>Select Category</h4>
  <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %>

  <h4>Select Store</h4>
  <%= form.collection_select :store_id, Store.all, :id, :name, prompt: "Select Store" %>
  <h4>Select Brand</h4>

  <%= form.collection_select :brand_id, Brand.all, :id, :name, prompt: "Select Brand" %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
